@model IEnumerable<armytech.Models.Student>

@{
    ViewBag.Title = "Index";
}



<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.Name)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.BirthDate)
            </th>
            <th>
                @Html.DisplayName("Field")
            </th>
            <th>
                @Html.DisplayName("Governorate ")
            </th>
            <th>
                @Html.DisplayName("Neighborhood ")
            </th>
            <th>  @Html.DisplayName("Edit")</th>
            <th>  @Html.DisplayName("Details")</th>
            <th>  @Html.DisplayName("Delete")</th>

        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Field.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Governorate.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Neighborhood.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-info" }) |

            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-primary" }) |

            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { onclick = "return confirm('Are you sure you wish to delete this article?');", @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
